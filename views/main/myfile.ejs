<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PDF Notes Page</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .navbar {
            background-color: #e9eef6;
            padding: 15px;
        }

        .navbar-brand {
            color: #fff;
            font-size: 1.5rem;
            font-weight: bold;
        }




        .card-body img {
            width: 50px;

        }

        .footer {
            background-color: #f2f0f0;
            padding: 10px;
            margin-top: auto;
            text-align: center;
        }

        .footer-icon {
            font-size: 20px;
            margin-right: 10px;
        }

        .footer-text {
            font-size: 18px;
            /* font-weight: bold; */
        }



        .navbar-nav .nav-link:hover {
            background-color: #2786DB;
            /* Change this to your desired text color on hover */
            /* Change this to your desired font size on hover */
            border-radius: 10%;
            font-weight: 700;
        }

        .st {
            background-color: #f2f0f0;
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-light st" style="box-shadow: 20px 10px 10px #303234;">
        <a class="navbar-brand" href="/"><img width="100" height="50" src="/img/logo-no-background.png" alt=""></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active font-bold" href="/main">Home <span
                        class="sr-only">(current)</span></a>
                <a class="nav-item nav-link active font-bold" href="/main/new">Upload</a>
                <a class="nav-item nav-link active font-bold" href="/qna">Q&A</a>
                <a class="nav-item nav-link active font-bold" href="/users/logout">logout</a>

            </div>
        </div>
    </nav>

    <div class="container mt-3">
        <h4><strong>Welcome, <%= username %>!</strong></h4>


        <div class="container">
            <div class="alert alert-light" role="alert">
                <strong class="alert-link">Public File...</strong>
            </div>
            <% if (publicFiles.length> 0 || privateFiles.length > 0) { %>
                <div class="card-columns">
                    <% publicFiles.forEach(file=> { %>
                        <div class="card  ">
                            <img src="/img/pdf.png" width="100px">
                            <div class="card-body">
                                <p> <strong>Title :</strong>
                                    <%=file.title %>
                                </p>
                                <p> <strong>Author:</strong>
                                    <%=file.author %>
                                </p>
                                <div class="d-flex align-items-sm-center text-center center  ">

                                    <span class="card-text mr-2 ">
                                        <a href="/docs/<%= file.filename %>" target="_blank" class="btn btn-info"><i
                                                class="fas fa-file-pdf"></i></a>
                                    </span>
                                    <span> <a href="/docs/<%= file.filename %>" download="<%= file.title %>.pdf"
                                            class="card-link text-center mr-3" style="cursor: pointer;">
                                            <i class="fas fa-download" style="color: #007BFF; font-size: 18px;"></i>
                                        </a></span>
                                    <span class="card-text mr-2"> <a href="/update/<%= file._id %>"
                                            style="font-size: 18px;"> <i class="fas fa-edit"
                                                style="color: #007bff;"></i></a></span>
                                    <span class='card-text mr-2'>
                                        <form action="/deletePost/<%= file._id %>?_method=DELETE" method="post"
                                            class="form-group">
                                            <button class="card-text"
                                                style="font-size: 20px; cursor: pointer; border: none;"><i
                                                    class="fas fa-trash-alt"
                                                    style="color: rgb(26, 24, 24);"></i></button>
                                        </form>
                                    </span>
                                </div>
                            </div>
                        </div>


                        <%})%>
                </div>

                <div class="alert alert-light" role="alert">
                    <strong class="alert-link">Private File...</strong>
                </div>
                <div class="card-columns  ">
                    <% privateFiles.forEach(file=> { %>
                        <div class="card   ">
                            <img src="/img/pdf.png" width="100px">
                            <div class="card-body">
                                <p> <strong>Title:</strong>
                                    <%=file.title %>
                                </p>
                                <p> <strong>Author:</strong>
                                    <%=file.author %>
                                </p>
                                <div class="d-flex text-align-center">
                                    <p class="card-text mr-2 ">
                                        <a href="/docs/<%= file.filename %>" target="_blank" class="btn btn-info"><i
                                                class="fas fa-file-pdf"></i></a>
                                    </p>
                                    <p class="card-text mr-2"> <a href="/update/<%= file._id %>"
                                            style="font-size: 30px;"><i class="fas fa-download"
                                                style="color: #007BFF; font-size: 18px;"></i></a></p>
                                    <p class='card-text mr-2'>
                                    <form action="/deletePost/<%= file._id %>?_method=DELETE" method="post"
                                        class="form-group" class="d-inline-block ml-2 bg-dark"
                                        style="font-size: 20px ; cursor: pointer;"><i class="fas fa-trash-alt"
                                            style="color: rgb(26, 24, 24);"></i>
                                    </form>
                                    </p>
                                </div>
                            </div>
                        </div>
                </div>


        </div>


        <!--  -->

        <% }); %>
            <% }else{%>
                <h3>No File Upload yet.....</h3>
                <%}%>



    </div>